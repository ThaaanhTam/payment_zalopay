<record id="ir_cron_zalopay_check_status" model="ir.cron">
    <field name="name">Check ZaloPay Status</field>
    <field name="model_id" ref="model_payment_transaction"/>
    <field name="state">code</field>
    <field name="code">model.query_zalopay_status()</field>
    <field name="interval_number">15</field>
    <field name="interval_type">minutes</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
    <field name="domain_force">[('next_check', '&gt;', now()), ('status', '=', 'pending')]</field>
</record>
